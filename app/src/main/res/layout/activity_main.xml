<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/TxtWindow">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="152dp"
            app:layout_constraintHorizontal_bias="0.498" android:id="@+id/rText"/>

    <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/RecBtn"
            app:layout_constraintTop_toBottomOf="@+id/rText" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="68dp"
            android:text="@string/RecBtnText"/>
    <CheckBox
            android:text="@string/ModelReadyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/checkBox"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.054" app:layout_constraintVertical_bias="0.12"/>

</androidx.constraintlayout.widget.ConstraintLayout>